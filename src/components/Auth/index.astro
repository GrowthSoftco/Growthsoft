---

import { Icon } from 'astro-icon/components';
import Label from './Label.astro';
import Input from './Input.astro';
import Button from '@components/Utils/Button.astro';
import Separation from '@components/Utils/Separation.astro';

import Logo from '@assets/logo/LogoD.svg';

interface Props {
    action?: string;
}

const { action = "/api" } = Astro.props;
---

<div class="max-w-md px-10 content-center m-auto">
    <form action={action} class="flex flex-col gap-6">
        <div class="flex flex-col items-center gap-2 text-center">
            <img src={Logo.src} alt="" class='w-10 opacity-85'>
            <h1 class="text-2xl mt-10 font-bold">Login to your account</h1>
            <p class="text-sm text-neutral-600 font-medium">
                Enter your email below to login to your account.
            </p>
        </div>
        <Label htmlFor="username" labelText="Username">
            <Input
                inputType="text"
                inputName="username"
                inputId="username"
            />
        </Label>
        <Label htmlFor="passwd" labelText="Password" isPasswordInput>
            <Input
                inputType="password"
                inputName="password"
                inputId="password"
            />
        </Label>
        <Button>Login</Button>
        <Separation Label="Or continue with"/>
        <Button variant="no_bg">
            <Icon name="google" class="mr-2"/>
            Login with Google
        </Button>
    </form>
    
</div>