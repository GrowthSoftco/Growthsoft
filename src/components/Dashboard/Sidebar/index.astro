---
import { DashboardLinks } from "@types";
import { Icon } from "astro-icon/components";
---

<nav class="bg-black w-[4.8rem] transition-all min-h-screen flex flex-col">
    <div>
      <Icon name="logo" class="text-white w-full my-8 text-2xl" />
      <ul>
        {
          DashboardLinks.map(({ href, icon, label }) => (
            <li class="text-white relative group">
              <a href={href} class="flex gap-4">
                <Icon 
                  name={icon} 
                  class="text-white mx-auto my-5 transition-transform group-hover:scale-110" 
                  id="icon" 
                />
                <span class="absolute left-full ml-2 top-1/2 -translate-y-1/2 px-2 py-1 bg-neutral-900 text-xs text-white rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">
                  {label}
                </span>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <button
      class="flex items-center justify-center text-center w-full py-8 cursor-pointer relative group mt-auto"
      id="logout"
      type="submit"
    >
      <Icon name="Sidebar/logout" class="text-white" />
      <span class="absolute left-full ml-2 top-1/2 -translate-y-1/2 px-2 py-1 bg-red-900 text-xs text-red-200 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">
        Cerrar sesi√≥n
      </span>
    </button>
</nav>